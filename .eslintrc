{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb/base",
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "object-curly-newline": [
          "error",
          {
            "ObjectExpression": { "multiline": true },
            "ObjectPattern": { "multiline": true },
            "ImportDeclaration": "never",
            "ExportDeclaration": { "multiline": true, "minProperties": 3 }
          }
        ],
        "no-use-before-define": ["error",
          {
            "functions": false,
            "classes": true
          }
        ]
    }
  }
